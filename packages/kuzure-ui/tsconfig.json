{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "outDir": "esm",
    "baseUrl": "src",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src"]
}
